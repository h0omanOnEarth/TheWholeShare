<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.UserProfileFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_square_1"
        android:orientation="vertical">


        <EditText
            android:id="@+id/etUsername_Profile"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_square_2"
            android:ems="10"
            android:enabled="false"
            android:fontFamily="@font/montserrat"
            android:hint="Username"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/etFullName_Profile"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_square_2"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:paddingLeft="20dp" />

        <EditText
            android:id="@+id/etPhoneNumber_Profile"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_square_2"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:hint="Phone Number"
            android:inputType="phone"
            android:paddingLeft="20dp" />

        <EditText
            android:id="@+id/etAddress_Profile"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_square_2"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:gravity="start"
            android:hint="Address"
            android:inputType="textMultiLine"
            android:paddingLeft="20dp"
            android:paddingTop="10dp" />

        <EditText
            android:id="@+id/etEmail_Profile"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_square_2"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp" />

        <EditText
            android:id="@+id/etPassword_profile"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_square_2"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:hint="New Password"
            android:inputType="textPassword"
            android:paddingLeft="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEdit_Profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_square_2"
            android:fontFamily="@font/montserrat"
            android:text="EDIT"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>